@page
@model ImcModel
@{
}

<h3>Suma de dos números</h3>
<form method="post">
    <p>Ingresa el peso (KG) <input type="number" step="0.1" asp-for="peso" /></p>
    <p>Ingresa la altura (cm) <input type="number" step="1" asp-for="altura" /></p>

    <p> <input type="submit" value="Calcular" /></p>

</form>

@if (Model.imc != 0)
{
    double imc = Model.imc;
    <div>
        <strong>El resultado es @imc</strong>
    </div>
    if(imc < 18)
    {
        <p>Peso bajo</p>
    }
    else if (imc >= 18 && imc <25)
    {
        <p>Peso normal</p>
    }
    else if (imc >= 25 && imc < 27)
    {
        <p>Sobre Peso</p>
    }
    else if (imc >= 27 && imc < 30)
    {
        <p>Obesidad grado I</p>
    }
    else if (imc >= 30 && imc < 40)
    {
        <p>Obesidad grado II</p>
    }
    else if (imc >= 40)
    {
        <p>Obesidad grado III</p>
    }
}